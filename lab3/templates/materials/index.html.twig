{% extends 'base.html.twig' %}

{% block title %}Materials index{% endblock %}

{% block body %}
    <h1>Materials index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for material in materials %}
            <tr>
                <td>{{ material.id }}</td>
                <td>{{ material.name }}</td>
                <td>
                    <a href="{{ path('materials_show', {'id': material.id}) }}">show</a>
                    <a href="{{ path('materials_edit', {'id': material.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('materials_new') }}">Create new</a>
{% endblock %}
