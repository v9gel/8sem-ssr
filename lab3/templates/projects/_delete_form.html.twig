<button class="btn btn-dark" onclick='document.getElementById("delete{{project.id}}").submit()'>Удалить</button>
<form id=delete{{project.id}}  method="post" action="{{ path('projects_delete', {'id': project.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ project.id) }}">
</form>
