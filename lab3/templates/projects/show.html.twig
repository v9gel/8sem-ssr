{% extends 'base.html.twig' %}

{% block title %}{{ project.name }} - просмотр{% endblock %}

{% block body %}
    <h1 class="my-4">
        Проект {{ project.name }}
        <small>Подробный просмотр</small>
      </h1>

      <div class="row">
        <div class="col-md-4">
          <h3 class="my-3">Описание проекта</h3>
          <p>{{ project.body }}</p>
          <h3 class="my-3">Характеристики</h3>
          <ul>
            <li>Материал - {{ project.material }}</li>
            <li>Этажность - {{ project.levels }}</li>
            <li>Площадь - {{ project.square }} м²</li>
          </ul>
          <h3 class="my-3">Постройки</h3>
          <ul>
            {% for building in project.buildings %}
                <li>{{building}}</li>
            {% else %}
                    <li>В проекте нет строений</li>
            {% endfor %}
          </ul>
        </div>
        <div class="col-md-8">
          <img class="img-fluid" src="{{ project.picture }}" alt="{{ project.name }}" />
        </div>
      </div>
    </div>
{% endblock %}
