{% extends 'base.html.twig' %}

{% block title %}Buildings index{% endblock %}

{% block body %}
    <h1>Buildings index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for building in buildings %}
            <tr>
                <td>{{ building.id }}</td>
                <td>{{ building.name }}</td>
                <td>
                    <a href="{{ path('buildings_show', {'id': building.id}) }}">show</a>
                    <a href="{{ path('buildings_edit', {'id': building.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('buildings_new') }}">Create new</a>
{% endblock %}
